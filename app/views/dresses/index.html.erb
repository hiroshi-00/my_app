<h1>Dresses</h1>

<table class = "table text-center">
  <thead class = "thead-dark">
    <tr>
      <th>No</th>
      <th>Name</th>
      <th>Img</th>
      <th>Category</th>
      <th>Menu</th>
    </tr>
  </thead>

  <tbody>
    <% @dresses.each do |dress| %>
      <tr>
        <td><%= dress.no %></td>
        <td><%= link_to dress.name, dress %></td>
        <td><%= dress.img %></td>
        <td><%= link_to dress.category, "/categories/#{dress.category}" %></td>
        <% if user_signed_in? %>
          <td>
            <%= link_to 'Edit', edit_dress_path(dress), class: "btn btn-outline-primary" %> 
            <%= link_to 'Destroy', dress, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger"  %>
            <%= link_to 'Show', dress_path(dress), class: "btn btn-outline-primary" %>
          </td>
        <% else %>
          <td>
            <%= link_to 'Show', dress_path(dress), class: "btn btn-outline-primary" %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

